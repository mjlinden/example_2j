{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <table class="table">
            <tr>
                <th>name</th>
                <th>price</th>
                <th>category</th>
            </tr>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.category.name }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}